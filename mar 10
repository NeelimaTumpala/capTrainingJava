//LinkedList
package day4;

import java.util.LinkedList;

public class LinkedLiistEx {

	public static void main(String[] args) {
		
		LinkedList<String> list = new LinkedList<String>();
		list.add("aaa");
		list.add("java");
		list.add("spring");
		System.out.println(list);
		list.addFirst("oracle");
		list.addLast("james");
		System.out.println(list);
		list.forEach((l)->System.out.println(l));

	}

}

//collection
//Employee->EmployeeList
package day4;

public class Employee {
	private int code;
	private String name;
	private double salary;
	
	public Employee() {
		
	}
	
	public Employee(int code, String name, double salary) {
		this.code = code;
		this.name = name;
		this.salary = salary;
	}

	public int getCode() {
		return code;
	}

	public void setCode(int code) {
		this.code = code;
	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public double getSalary() {
		return salary;
	}

	public void setSalary(double salary) {
		this.salary = salary;
	}

	@Override
	public String toString() {
		return "Employee [code=" + code + ", name=" + name + ", salary=" + salary + "]";
	}	
}

//collection
//Employee->EmployeeList
package day4;

import java.util.ArrayList;

public class EmployeeList {

	public static void main(String[] args) {
		ArrayList<Employee> emplist = new ArrayList<Employee>();
		emplist.add(new Employee(101,"arjun",5000));
		emplist.add(new Employee(121,"james",5500));
		emplist.add(new Employee(201,"gemini",6000));
		System.out.println(emplist);
		for(Employee emp : emplist)
			System.out.println(emp.getCode()+emp.getName()+emp.getSalary());
    emplist.forEach((e)->System.out.println(e.getCode()+e.getName()+e.getSalary()));

	}
	

}

//Sorting-->comparable->according to code
//collection
//Employee->EmployeeList
package day4;

public class Employee implements Comparable<Employee>{
	private int code;
	private String name;
	private double salary;
	
	public Employee() {
		
	}
	
	public Employee(int code, String name, double salary) {
		this.code = code;
		this.name = name;
		this.salary = salary;
	}

	public int getCode() {
		return code;
	}

	public void setCode(int code) {
		this.code = code;
	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public double getSalary() {
		return salary;
	}

	public void setSalary(double salary) {
		this.salary = salary;
	}

	@Override
	public String toString() {
		return "Employee [code=" + code + ", name=" + name + ", salary=" + salary + "]";
	}

	@Override
	public int compareTo(Employee o) {
		
		return this.code - o.getCode();
	}	
}

